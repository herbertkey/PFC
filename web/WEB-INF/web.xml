<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControleUsuario</servlet-name>
        <servlet-class>controller.ControleUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleCategoria</servlet-name>
        <servlet-class>controller.ControleCategoria</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControleSubcategoria</servlet-name>
        <servlet-class>controller.ControleSubcategoria</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleUsuario</servlet-name>
        <url-pattern>/ControleUsuario</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControleAcesso</servlet-name>
        <servlet-class>controller.ControleAcesso</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControleAcesso</servlet-name>
        <url-pattern>/ControleAcesso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleCategoria</servlet-name>
        <url-pattern>/ControleCategoria</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControleSubcategoria</servlet-name>
        <url-pattern>/ControleSubcategoria</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            15
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>AcessoAdministrativo</filter-name>
        <filter-class>AutorizacaoDeAcesso.AcessoAdministrativo</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoAdministrativo</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AcessoLogado</filter-name>
        <filter-class>AutorizacaoDeAcesso.AcessoLogado</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoLogado</filter-name>
        <url-pattern>/principal.jsp</url-pattern>
    </filter-mapping>
</web-app>
